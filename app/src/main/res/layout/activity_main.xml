            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/namaLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_toRightOf="@+id/logo"
                    android:text="DigiTeam"
                    android:textColor="@color/hitam2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kataKata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namaLogo"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_toRightOf="@+id/logo"
                    android:text="Digital Together Everyone Achieve More"
                    android:textColor="@color/abu"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kataKata"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="17dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_toRightOf="@+id/logo"
                    android:text="Jabar Digital Service"
                    android:textColor="@color/abu"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

